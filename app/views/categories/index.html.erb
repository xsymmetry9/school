<h1 class="text-center mt-4">Categories</h1>
<div class="flickr_pagination">
    <%= will_paginate @categories, :container => false %>
</div>
<div class="container">
    <% @categories.each do |category| %>
        <div class="row justify-content-md-center">
            <div class="col-4 mt-4">
                <div class="card text-center shadow mb-5 bg-body-tertiary rounded">
                    <div class="card-header fst-italic">
                        Category ID: <%= category.id %>
                    </div>
                    <div class="card-body">
                        <%= link_to category.name, category_path(category), method: :show, class: "btn btn-outline-success" %>                       

                    </div>
                    <div class="card-footer text-body-secondary">
                        <small>Created <%= time_ago_in_words(category.created_at) %> ago, updated <%= time_ago_in_words(category.updated_at) %> ago</small>
                    </div>
                </div>
            </div>
        </div>
    <% end %>
</div>
<div class="flickr_pagination mb-4">
    <%= will_paginate @categories, :container => false %>
</div>