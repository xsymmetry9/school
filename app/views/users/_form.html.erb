<div class="container">
  <div class="row justify-content-center">
    <div class="col-10">
      <%= render 'shared/errors', obj: @user %>

      <%= form_with(model: @user,
                    html: { class: "shadow p-3 mb-3 bg-info rounded" },
                    local: true) do |form| %>

        <div class="form-group row mt-3">
          <%= form.label :username, class: "col-sm-2 col-form-label text-light" %>
          <div class="col-10">
            <%= form.text_field :username,
                                class: "form-control shadow rounded",
                                placeholder: "Enter a username" %>
          </div>
        </div>

        <div class="form-group row mt-3">
          <%= form.label :email, class: "col-sm-2 col-form-label text-light" %>
          <div class="col-10">
            <%= form.email_field :email,
                                 class: "form-control shadow rounded",
                                 placeholder: "Enter your email address" %>
          </div>
        </div>

        <div class="form-group row mt-3">
          <%= form.label :password, class: "col-sm-2 col-form-label text-light" %>
          <div class="col-10">
            <%= form.password_field :password,
                                    class: "form-control shadow rounded",
                                    placeholder: "Enter a password" %>
          </div>
        </div>

        <div class="form-group row mt-3 justify-content-center">
          <div class="col-auto">
            <%= form.submit "Sign up", class: "btn btn-outline-light btn-lg" %>
          </div>
        </div>

      <% end %>

      <div class="text-center mb-3">
        <%= link_to "[Cancel and return to articles listing]",
                    articles_path,
                    class: "text-info" %>
      </div>
    </div>
  </div>
</div>
